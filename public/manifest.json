{
	"manifest_version": 3,
	"name": "Chrome Extensions Template",
	"description": "Base Level Extension Template",
	"version": "1.0",
	"permissions": [
		"bookmarks",
		"contextMenus"
	],
	"action": {
		"default_popup": "index.html",
		"default_icon": "icon-32.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://twitch.tv/*"
			],
			"js": [
				"contents.js"
			]
		}
	],
	"host_permissions": [
		"https://twitch.tv/*"
	],
	"background": {
		"service_worker": "background.js"
	}
}